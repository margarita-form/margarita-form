{
  "name": "margarita-form",
  "version": "0.0.0",
  "license": "MIT",
  "description": "Modern form library made with TypeScript",
  "keywords": [
    "Form",
    "Forms",
    "Form alternative",
    "Form library",
    "Reactive form",
    "React form"
  ],
  "scripts": {
    "dev": "nx run baking-oven:serve",
    "gen:lib": "./generate-lib.sh",
    "test:core": "nx run margarita-form:lint && nx run margarita-form:test",
    "test:react": "nx run margarita-form-react:lint",
    "pretty": "prettier --write \"libs/**/*.{js,jsx,ts,tsx,json,md}\"",
    "build:core": "nx run margarita-form:build",
    "build:react": "nx run margarita-form-react:build",
    "build:all": "npm run build:core && npm run build:react",
    "publish:core": "cd dist/libs/margarita-form && npm publish",
    "publish:react": "cd dist/libs/margarita-form-react && npm publish",
    "publish:all-dev": "npm run test:core && npm run test:react && npm run create-docs && lerna version --force-publish -m \"chore(release-dev): version %v\" && npm run build:all && node ./scripts/add-readme.mjs && node ./scripts/update-dependencies.mjs && npm run publish:core --tag dev && npm run publish:react --tag dev",
    "publish:all": "npm run test:core && npm run test:react && npm run create-docs && lerna version --force-publish -m \"chore(release): version %v\" && npm run build:all && node ./scripts/add-readme.mjs && node ./scripts/update-dependencies.mjs && npm run publish:core && npm run publish:react",
    "create-docs": "typedoc"
  },
  "private": true,
  "devDependencies": {
    "@nx/eslint-plugin": "16.5.0",
    "@nx/js": "16.5.0",
    "@nx/linter": "16.5.0",
    "@nx/node": "16.5.0",
    "@nx/react": "16.5.0",
    "@nx/vite": "16.5.0",
    "@nx/workspace": "16.5.0",
    "@swc/cli": "0.1.62",
    "@swc/core": "^1.2.173",
    "@testing-library/react": "13.4.0",
    "@types/child-process-promise": "^2.2.2",
    "@types/inquirer": "^9.0.3",
    "@types/lodash.get": "^4.4.7",
    "@types/node": "18.11.9",
    "@types/react": "18.2.13",
    "@types/react-dom": "18.2.6",
    "@types/react-is": "18.2.1",
    "@types/styled-components": "5.1.26",
    "@typescript-eslint/eslint-plugin": "5.61.0",
    "@typescript-eslint/parser": "5.61.0",
    "@vitejs/plugin-react": "4.0.3",
    "@vitest/coverage-c8": "0.32.4",
    "@vitest/ui": "0.32.4",
    "babel-plugin-styled-components": "1.10.7",
    "child-process-promise": "^2.2.1",
    "eslint": "~8.15.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-react": "7.31.11",
    "eslint-plugin-react-hooks": "4.6.0",
    "inquirer": "^9.1.5",
    "jsdom": "22.1.0",
    "nx": "16.5.0",
    "prettier": "^2.6.2",
    "typedoc": "^0.24.8",
    "typescript": "5.1.6",
    "vite": "4.4.2",
    "vite-plugin-dts": "2.3.0",
    "vite-plugin-eslint": "^1.8.1",
    "vite-tsconfig-paths": "4.2.0",
    "vitest": "0.32.4"
  },
  "dependencies": {
    "@swc/helpers": "0.5.1",
    "lerna": "^7.1.1",
    "lodash.get": "^4.4.2",
    "nanoid": "^4.0.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-is": "18.2.0",
    "rxjs": "^7.8.0",
    "styled-components": "5.3.6"
  },
  "workspaces": [
    "packages/*"
  ]
}
